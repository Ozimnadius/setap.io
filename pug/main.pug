    //- mmenu
    .mmenu
        .mmenu__main
            .mmenu__top
                //- button
                button(type='button').mmenu__button.mmenu__close
                    +icon('left-arrow','mmenu__button-svg')
                    .mmenu__button-title Меню
                //- search
                a(href='search.html').mmenu__search-button
                    +icon('search', 'mmenu__search-open')
                    +icon('close', 'mmenu__search-close')
            .mmenu__list
                .mmenu__item
                    a(href='#').mmenu__item-link
                        .mmenu__item-title Ваш город
                        .mmenu__item-city Москва
                        .mmenu__item-arrow
                    .mmenu__wrapper
                        //- top
                        .mmenu__top
                            //- button
                            button(type='button').mmenu__button.mmenu__prev
                                +icon('left-arrow','mmenu__button-svg')
                                .mmenu__button-title Назад
                            //- search
                            a(href='search.html').mmenu__search-button
                                +icon('search', 'mmenu__search-open')
                                +icon('close', 'mmenu__search-close')
                        //- list
                        .mmenu__list
                            each c in mmenu.citys
                                .mmenu__item
                                    //- link
                                    a(href='#').mmenu__item-link.subitem2.mmenu__city
                                        .mmenu__item-title= c
                each i in mmenu.list
                    .mmenu__item
                        //- link
                        a(href=i.link class=i.dopClass).mmenu__item-link
                            .mmenu__item-title= i.title
                            if i.list
                                .mmenu__item-arrow
                        if i.list
                            //- wrapper
                            .mmenu__wrapper
                                //- top
                                .mmenu__top
                                    //- button
                                    button(type='button').mmenu__button.mmenu__prev
                                        +icon('left-arrow','mmenu__button-svg')
                                        .mmenu__button-title Назад
                                    //- search
                                    a(href='search.html').mmenu__search-button
                                        +icon('search', 'mmenu__search-open')
                                        +icon('close', 'mmenu__search-close')
                                //- link
                                a(href=i.link).mmenu__link= i.title
                                //-list
                                .mmenu__list
                                    each j in i.list
                                        .mmenu__item
                                            //- link
                                            a(href=j.link class=j.dopClass).mmenu__item-link.subitem
                                                .mmenu__item-title= j.title
                                                if j.list
                                                    .mmenu__item-arrow
                                            if j.list
                                                //- wrapper
                                                .mmenu__wrapper
                                                    //- top
                                                    .mmenu__top
                                                        //- button
                                                        button(type='button').mmenu__button.mmenu__prev
                                                            +icon('left-arrow','mmenu__button-svg')
                                                            .mmenu__button-title Назад
                                                        //- search
                                                        a(href='search.html').mmenu__search-button
                                                            +icon('search', 'mmenu__search-open')
                                                            +icon('close', 'mmenu__search-close')
                                                    //- link
                                                    a(href=j.link).mmenu__link= j.title
                                                    //- list
                                                    .mmenu__list
                                                        each k in j.list
                                                            .mmenu__item
                                                                //- link
                                                                a(href=k.link class=j.dopClass).mmenu__item-link.subitem2
                                                                    .mmenu__item-title= k.title



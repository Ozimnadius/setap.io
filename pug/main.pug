        .wrapper
            //- heeader
            header.header
                //- top
                .header__top
                    .container
                        .header__top-row
                            //- city
                            .header__city
                                .city
                                    .city__title Город:
                                    .city__select
                                        select(name='city')
                                            option(value='Москва') Москва
                                            option(value='Город1') Санкт-Петербург
                                            option(value='Город2') Нижний Новгород

                            //- menu
                            .header__menu
                                each i in headerMenu
                                    a(href=i.href).header__item= i.title


                //- middle
                .header__middle
                    .container
                        .row.header__middle-row
                            //- logo
                            .header__logo
                                a(href='/').logo
                                    img(src='images/content/logo.png').logo__img

                            //- search
                            .header__search
                                form.hsearch
                                    input(type='text' name='search' placeholder='онлайн касса АЗУР-01Ф').hsearch__input
                                    button(type='submit').hsearch__button
                                        +icon('loop', 'hsearch__svg')

                            //- buttons
                            .header__buttons
                                //- mmenu-button
                                button(type='button').mmenu-button
                                    .mmenu-button__line
                                    .mmenu-button__line
                                    .mmenu-button__line

                                //- tel
                                .header__tel
                                    a(href='tel:+7(499)110-38-35').header__phone +7 (499) 110-38-35

                                //- call
                                .header__call
                                    button(type='button').button Заказать звонок

                                //- mlogo
                                .header__mlogo
                                    a(href='/').logo
                                        img(src='images/content/logo.png').logo__img
                                //- mbasket
                                .header__mbasket
                                    a(href='cart.html').basket.basket_i
                                        .basket__img
                                            +icon('supermarket','basket__img-img')
                                            //img(src='images/icons/cart.svg').basket__img-img
                                        .basket__price 125 000 руб.







                //- bottom
                .header__bottom
                    .container
                        .row.header__bottom-row
                            //- left
                            .header__left
                                nav.nav
                                    each i in nav
                                        div(class=i.dopClass).nav__item
                                            a(href=i.href).nav__item-link= i.title
                                            if i.subnav
                                                .nav__item-subnav
                                                    .subnav
                                                        .container
                                                            .row
                                                                //- left
                                                                .subnav__left
                                                                    a(href='catalog.html').subnav__link= i.subnav.title
                                                                    .subnav__ul
                                                                        a(href='catalog.html').subnav__ul-link= i.subnav.list.title
                                                                        .subnav__ul-row
                                                                            each j in i.subnav.list.items
                                                                                a(href='catalog.html').subnav__item= j
                                                                //- right
                                                                .subnav__right
                                                                    .row
                                                                        each j in i.subnav.rows
                                                                            .subnav__col
                                                                                each k in j
                                                                                    .subnav__list
                                                                                        a(href='catalog.html').subnav__list-link= k.title
                                                                                        .subnav__list-items
                                                                                            if k.items
                                                                                                each l in k.items
                                                                                                    a(href='catalog.html').subnav__item= l



                            //- right
                            .header__right
                                a(href='cart.html').basket.basket_i
                                    .basket__img
                                        +icon('supermarket','basket__img-img')
                                        //img(src='images/icons/cart.svg').basket__img-img
                                    .basket__price 125 000 руб.



                //- fixed
                .header-fixed
                    //- bottom
                    .header__bottom
                        .container
                            .row.header__bottom-row
                                //- left
                                .header__left
                                    nav.nav
                                        each i in nav
                                            div(class=i.dopClass).nav__item
                                                a(href=i.href).nav__item-link= i.title
                                                if i.subnav
                                                    .nav__item-subnav
                                                        .subnav
                                                            .container
                                                                .row
                                                                    //- left
                                                                    .subnav__left
                                                                        a(href='catalog.html').subnav__link= i.subnav.title
                                                                        .subnav__ul
                                                                            a(href='catalog.html').subnav__ul-link= i.subnav.list.title
                                                                            .subnav__ul-row
                                                                                each j in i.subnav.list.items
                                                                                    a(href='catalog.html').subnav__item= j
                                                                    //- right
                                                                    .subnav__right
                                                                        .row
                                                                            each j in i.subnav.rows
                                                                                .subnav__col
                                                                                    each k in j
                                                                                        .subnav__list
                                                                                            a(href='catalog.html').subnav__list-link= k.title
                                                                                            .subnav__list-items
                                                                                                if k.items
                                                                                                    each l in k.items
                                                                                                        a(href='catalog.html').subnav__item= l



                                //- right
                                .header__right
                                    a(href='cart.html').basket.basket_i
                                        .basket__img
                                            +icon('supermarket','basket__img-img')
                                            //img(src='images/icons/cart.svg').basket__img-img
                                        .basket__price 125 000 руб.






            //- pages
            .page
                block content

            //- footer
            footer.footer
                .footer__subscribe
                    include common/blocks/subscribe
                .container
                    //- top
                    .footer__top
                        .row
                            //- mleft
                            .footer__mleft
                                .footer__mleft-top
                                    .footer__mleft-row
                                        each i in ['Каталог','Автоматизация ','Обслуживание', 'Услуги']
                                            a(href='/').footer__mitem= i
                                    .footer__mleft-row
                                        each i in ['ЕГАИС','ФГИС ','Маркировка ', 'ЭЦП']
                                            a(href='/').footer__mitem= i
                                .footer__mleft-bottom
                                    .footer__logo
                                        a(href='/').logo
                                            img(src='images/content/logo.png').logo__img
                                    .footer__desc Автоматизация магазинов розничной торговли, предприятий общественного питания (HoReCa), складов. Индивидуальное проектирование и комплексное оснащение, подбор торгового оборудования, доставка и монтаж, подключение и настройка, проведение пуско-наладочных работ, обучение персонала работе с системой, техническое обслуживание. (с) 2019 Все права защищены.
                            //- left
                            .footer__left
                                .row
                                    each col in footer
                                        .footer__col
                                            a(href=col.href).footer__title.footer__title_link= col.title
                                            .footer__list
                                                each i in col.list
                                                    a(href=col.href).footer__item= i

                            //- right
                            .footer__right
                                .footer__title Контакты
                                .footer__phones
                                    a(href='tel:+7(499)110-28-25').phone.footer__phone.footer__phone_m +7 (499) 110-28-25
                                    //a(href='tel:+7(499)123-33-44').phone.phone_grey.footer__phone +7 (499) 123-33-44
                                    a(href='mailto:info@inthestore.ru').footer__mail info@inthestore.ru
                                    .footer__phones-comment
                                        | Время работы с 9:00 - 20:00
                                    a(href='/').footer__addr
                                        |143409, Московская область,
                                        br
                                        |г. Красногорск, ул. Ленина,
                                        br
                                        |д. 38-б, офис 88

                                .footer__socials.socials
                                    a(href='/' target='_blank').social.social_vk
                                        +icon('vk', 'social__svg')
                                    a(href='/' target='_blank').social.social_fb
                                        +icon('fb', 'social__svg')
                                .footer__buttons
                                    button(type='button').button.footer__button Заказать звонок
                                    button(type='button').button.button_t.footer__button Оставить отзыв

                    //- bottom
                    .footer__bottom
                        .footer__logo
                            a(href='/').logo
                                img(src='images/content/logo.png').logo__img
                        .footer__desc Автоматизация магазинов розничной торговли, предприятий общественного питания (HoReCa), складов. Индивидуальное проектирование и комплексное оснащение, подбор торгового оборудования, доставка и монтаж, подключение и настройка, проведение пуско-наладочных работ, обучение персонала работе с системой, техническое обслуживание. (с) 2019 Все права защищены.




                .footer__mobile
                            a(href='tel:+7(499)110-38-35').footer__mobile-phone +7 (499) 110-38-35

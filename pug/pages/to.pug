extends ../main

block variables
    - var title = 'Техническое обслуживание'

block content
    main.to
        //- bread
        section.bread
            .container
                .bread__list
                    a(href='/').bread__item Главная
                    .bread__sep /
                    a.bread__item.bread__item_active Техническое обслуживание

        //- banner
        section(style='background-image:url(/images/content/tech/bg.jpg)').to__banner
            .container
                div.to__banner-wrapper
                    .row.to__banner-row
                        .to__banner-content
                            .to__banner-title Центр технического обслуживания для Вашего предприятия
                            button(type='button').button.to__banner-button Получить консультацию

        //- advs
        section.to__advs
            .container
                .row
                    each i,x in toAdvs
                        .to__adv
                            .to__adv-img
                                img(src='images/icons/icon_tech_0' + (x + 1) + '.svg').to__adv-pic
                            .to__adv-title= i.title
                            .to__adv-text= i.text



        //- what
        section.to__what
            .container
                //- title
                .to__what-title.title Что мы обслуживаем
                //- sws
                .to__sws
                    each i,x in toSws
                        div(class=x == 0 ? 'active' : '' data-id=x + 1).to__sw= i
                //- tabs
                .to__tabs
                    each i,x in [1,2,3]
                        div(class=x == 0 ? 'active' : '' data-id=x + 1).to__tab
                            .row.to__tab-row
                                //- left
                                .to__tab-left
                                    img(src='images/content/tech/1.png').to__tab-img

                                //- right
                                .to__tab-right
                                    .to__tab-content Lorem Ipsum - это текст-"рыба", часто используемый в печати и вэб-дизайне. Lorem Ipsum является стандартной "рыбой" для текстов на латинице с начала XVI века. В то время некий безымянный печатник создал большую коллекцию размеров и форм шрифтов, используя Lorem Ipsum для распечатки образцов. Lorem Ipsum не только успешно пережил без заметных изменений пять веков, но и перешагнул в электронный дизайн. Его популяризации в новое время послужили публикация листов Letraset с образцами Lorem Ipsum в 60-х годах и, в более недавнее время, программы электронной вёрстки типа Aldus PageMaker, в шаблонах которых используется Lorem Ipsum.
                                    button(type='button').to__tab-button.button Начать сотрудничество




        //- tarifs
        section.to__tarifs
            .container
                .tarifs
                    .title.tarifs__title Тарифы
                    .tarifs__table
                        .tarifs__thead
                            .tarifs__tr.tarifs__top
                                .tarifs__td.tarifs__w-1.tarif__title.tarif__grey Услуги
                                .tarifs__td.tarifs__w-2.tarif__1
                                    .tarif__name Базовый
                                    .tarif__cena 1 500 ₽
                                    .tarif__sub в квартал
                                .tarifs__td.tarifs__w-3.tarif__2
                                    .tarif__name Стандартный
                                    .tarif__cena 3 000 ₽
                                    .tarif__sub в квартал
                                .tarifs__td.tarifs__w-4.tarif__3
                                    .tarif__name Полный
                                    .tarif__cena 5 000 ₽
                                    .tarif__sub в квартал
                        .tarifs__tbody
                            each i in tarifsServices
                                .tarifs__tr
                                    .tarifs__td.tarifs__w-1
                                        .tarif__text= i.text
                                    each col,x in i.cols
                                        .tarifs__td(class='tarifs__w-' + (x + 2))
                                            div(class=col ? 'checked' : '').tarif__check
                            each i in tarifsPrice
                                .tarifs__tr
                                    .tarifs__td.tarifs__w-100.tarif__title.tarif__grey= i.title
                                each row in i.rows
                                    .tarifs__tr
                                        .tarifs__td.tarifs__w-1
                                            .tarif__text= row.text
                                        each price,x in row.price
                                            .tarifs__td(class='tarifs__w-' + (x + 2))
                                                .tarif__price= price




                        .tarifs__tfoot
                            .tarifs__tr.tarifs__bottom
                                .tarifs__td.tarifs__w-1.tarifs__bottom-title.tarif__grey
                                    .tarif__title Тарифы на техническое обслуживание торгового оборудования (за квартал)
                                    a(href='/' download=true).tarif__download Скачать прайс-лист
                                .tarifs__td.tarifs__w-2
                                    .tarif__name.tarif__name_b Базовый
                                    .tarif__cena.tarif__cena_b 1 500 ₽
                                    button(type='button').tarif__button.button Купить
                                .tarifs__td.tarifs__w-3
                                    .tarif__name.tarif__name_b Стандартный
                                    .tarif__cena.tarif__cena_b 3 000 ₽
                                    button(type='button').tarif__button.button Купить
                                .tarifs__td.tarifs__w-4
                                    .tarif__name.tarif__name_b Полный
                                    .tarif__cena.tarif__cena_b 5 000 ₽
                                    button(type='button').tarif__button.button Купить

        //- feed
        section.to__feed
            +feed('feed_grey','images/icons/call2.png')






















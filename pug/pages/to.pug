extends ../main

block variables
    - var title = 'Техническое обслуживание'

block content
    main.to
        //- bread
        section.bread
            .container
                .bread__list
                    a(href='/').bread__item Главная
                    .bread__sep /
                    a.bread__item.bread__item_active Техническое обслуживание

        //- banner
        section(style='background-image:url(/images/content/tech/bg.jpg)').to__banner
            .container
                div.to__banner-wrapper
                    .row.to__banner-row
                        .to__banner-content
                            .to__banner-title Центр технического обслуживания для Вашего предприятия
                            button(type='button').button.to__banner-button Получить консультацию

        //- advs
        section.to__advs
            .container
                .row
                    each i,x in toAdvs
                        .to__adv
                            .to__adv-img
                                img(src='images/icons/icon_tech_0' + (x + 1) + '.svg').to__adv-pic
                            .to__adv-title= i.title
                            .to__adv-text= i.text



        //- what
        section.to__what
            .container
                //- title
                .to__what-title.title Что мы обслуживаем
                //- sws
                .to__sws
                    each i,x in toSws
                        div(class=x == 0 ? 'active' : '' data-id=x + 1).to__sw= i
                //- tabs
                .to__tabs
                    each i,x in [1,2,3]
                        div(class=x == 0 ? 'active' : '' data-id=x + 1).to__tab
                            .row.to__tab-row
                                //- left
                                .to__tab-left
                                    img(src='images/content/tech/1.png').to__tab-img

                                //- right
                                .to__tab-right

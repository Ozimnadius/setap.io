                                    button(type='button').to__tab-button.button Начать сотрудничество




        //- tarifs
        section.to__tarifs
            .container
                .tatifs
                    .title.tarifs__title Тарифы
                    table.tarifs__table
                        thead
                            tr.tarifs__tr
                                th.tarifs__w-1.tarif__title Услуги
                                th.tarifs__w-2
                                th.tarifs__w-3
                                th.tarifs__w-4
                        tbody
                            each i in tarifsServices
                                tr.tarifs__tr
                                    td.tarifs__w-1
                                        .tarif__text= i.text
                                    each col,x in i.cols
                                        td(class='tarifs__w-' + (x + 2))
                                            div(class=col ? 'checked' : '').tarif__check
                            each i in tarifsPrice
                                tr.tarifs__tr
                                    td(colspan='4').tarif__title= i.title
                                each row in i.rows
                                    tr.tarifs__tr
                                        td.tarifs__w-1
                                            .tarif__text= row.text
                                        each price,x in row.price
                                            td(class='tarifs__w-' + (x + 2))
                                                .tarif__price= price




                        tfoot

        //- feed
        section.to__feed
            +feed('feed_grey','images/icons/call2.png')





















